{% extends "::base.html.twig" %}

{% block title %}Content Performance Analytics{% endblock %}

{% block body %}
<style type="text/css">
table.dataTable thead .sorting:before,
table.dataTable thead .sorting:after,
table.dataTable thead .sorting_asc:before,
table.dataTable thead .sorting_asc:after,
table.dataTable thead .sorting_desc:before,
table.dataTable thead .sorting_desc:after,
table.dataTable thead .sorting_asc_disabled:before,
table.dataTable thead .sorting_asc_disabled:after,
table.dataTable thead .sorting_desc_disabled:before,
table.dataTable thead .sorting_desc_disabled:after {
    content: "";
}
</style>
<div class="container-fluid">
    <h1>Monitored content listing</h1>
    <div class="row">
        <div class="col-md-12">
            <table id="example" class="table table-striped table-bordered" cellspacing="0" width="100%">
                <thead>
                    <tr>
                        <th>Published date</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Visits</th>
                        <th>Bounce rate</th>
                        <th>Time on page</th>
                        <th>Total</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Published date</th>
                        <th>Title</th>
                        <th>Author</th>
                        <th>Visits</th>
                        <th>Bounce rate</th>
                        <th>Time on page</th>
                        <th>Total</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>
<script>
$(document).ready(function() {
    $('#example').DataTable({
        "paging": true,
        "serverSide": true,
        "searching": false,
        "lengthMenu": [[5, 10, 25, 50, 100], [5, 10, 25, 50, 100]],
        "pageLength": 10,
        "columnDefs": [
            {
                targets: [ 0, 1, 2 ],
                className: 'mdl-data-table__cell--non-numeric'
            }
        ],
        "ajax": {
            "url": "/content",
            dataFilter: function(data){
                var json = jQuery.parseJSON( data );
                json.recordsTotal = json.totalItems;
                json.recordsFiltered = json.totalItems;
                json.data = json.items;

                return JSON.stringify( json ); // return JSON string
            }
        },
        "columns": [
            {
                "data": "published_date",
                "render": function (data) {
                    var date = new Date(data);
                    var month = date.getMonth() + 1;
                    return (month.length > 1 ? month : "0" + month) + "/" + date.getDate() + "/" + date.getFullYear();
                }
            },
            { "data": "title" },
            { "data": "author" },
            {
                "data": "visits_points",
                "render": function (visits_points, action, data) {
                    return visits_points + " <small>("+ data.visits +")</small>";
                }
            },
            {
                "data": "bounce_rate_points",
                "render": function (bounce_rate_points, action, data) {
                    return bounce_rate_points + " <small>("+ parseFloat(data.bounce_rate.toFixed(3)) +")</small>";
                }
            },
            {
                "data": "avg_time_on_page_points",
                "render": function (avg_time_on_page_points, action, data) {
                    return avg_time_on_page_points + " <small>("+ parseFloat(data.avg_time_on_page.toFixed(3)) +")</small>";
                }
            },
            { "data": "total_points" }
        ]
    });
});
</script>
{% endblock %}
